&emsp;&emsp;<h1>Log In</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    &emsp;&emsp;<%= f.label :email %><br />
    &emsp;&emsp;&emsp;&emsp;<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    &emsp;&emsp;<%= f.label :password %><br />
    &emsp;&emsp;&emsp;&emsp;<%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      &emsp;&emsp;<%= f.check_box :remember_me %>
      &emsp;&emsp;&emsp;&emsp;<%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
   &emsp;&emsp;&emsp;&emsp; <%= f.submit "Log in" %>
  </div>
<% end %>

&emsp;&emsp;<%= render "devise/shared/links" %>
