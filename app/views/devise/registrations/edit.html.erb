<h2><%= image_tag 'icon_person.png' ,size: "50"%>アカウント編集ページ </h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :ユーザーネーム %><br />
    <%= f.text_field :name, autofocus: true  %>
  </div>

  <div class="field">
    <%= f.label :プロフィール画像 %><br />
  <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :my_memo %><br />
    <%= f.text_field :memo, autofocus: true  %>
  </div>

  <div class="field">
    <%= f.label :本日の目標 %><br />
    <%= f.text_field :destination, autofocus: true  %>
  </div>  

  <div class="field">
    <%= f.label :ベストスコア %><br />
    <%= f.number_field :best_score, autofocus: true  %>
  </div>

  <div class="field">
    <%= f.label :目指すスコア %><br />
    <%= f.number_field :best_score_future, autofocus: true  %>
  </div>

  <div class="field">
    <%= f.label :変更したいパスワード %> <i>(変更したい場合のみ入力してください)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上のみ可</em>
    <% end %>
  </div>


  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>


  <div class="actions">
    <%= f.submit "保存する"  %>
  </div>


<% end %>


<br>
<br>
<%= button_to "アカウント削除",  data: { confirm: "Are you sure?" }, method: :delete %>

<%= button_to '戻る(マイページへ)', mypage_path(current_user.id) %>
