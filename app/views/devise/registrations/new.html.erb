<h1>&emsp;新規登録</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

<!--  ↓これを追加↓-->

  <div class="field">
    <%= f.label :ユーザーネーム%><br />
    &emsp;&emsp;<%= f.text_field :name, autofocus: true  %>
  </div>

  <div class="field">
    <%= f.label :ベストスコア %><br />
    &emsp;&emsp;<%= f.number_field :best_score %>
  </div>


  <div class="field">
    <%= f.label :ユーザー画像 %><br />
    &emsp;&emsp;<%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :年齢 %><br />
    &emsp;&emsp;<%=f.select :age, [["~10代","~10代"],["20代","20代"],["30代","30代"],["40代","40代"],["50代","50代"],["60代","60代"],["70代~","70代~"]]%>

  </div>

  <div class="field">
    <%= f.label :性別 %><br />
    &emsp;&emsp;<%=f.select :age, [["男性","男性"],["女性","女性"]]%>

  </div>

<!--  ↑ここまで↑-->
  <div class="field">
    <%= f.label :メールアドレス %><br />
    &emsp;&emsp;<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    &emsp;&emsp;<%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    &emsp;&emsp;<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div><br><br>

  <div class="actions">
    &emsp;<%= f.submit "登録する" %>
  </div>
<% end %><br>

<%= render "devise/shared/links" %>
